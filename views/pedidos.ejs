<%- include('partials/head.ejs')%> <%- include('partials/navbar.ejs')%>
<div class="container">
  <div class="card">
    <div class="card-header">
      <h1>Adicionar Pedido</h1>
      <hr />
    </div>
    <div class="card-body">
      <form action="/pedidos/new" method="post">
        <label for="">Numero</label>
        <input
          type="text"
          name="numero"
          id="numero"
          required
          class="form-control"
        />
        <label for="">Valor:</label>
        <input
          type="text"
          name="valor"
          id="valor"
          required
          class="form-control"
        />
 
        <br />
        <input type="submit" class="btn btn-success" value="Cadastrar" />
      </form>
    </div>
  </div>
</div>

<div class="container-fluid cover">
  <h1>Pedidos:</h1>
  <table class="table table-striped table-light">
    <thead>
      <tr>
        <th scope="col">Numero</th>
        <th scope="col">Valor</th>
      </tr>
    </thead>
    <tbody>
      <% pedido.forEach((pedido)=>{ %>
      <tr>
        <td><%= pedido.numero %></td>
        <td>R$<%= pedido.valor%></td>
        <td>
          <a style="color: orange" href="/pedidos/edit/<%=pedido.id%>"
            >Editar</a
          >
        </td>
        <td>
          <a style="color: red" href="/pedidos/delete/<%=pedido.id%>"
            >Excluir</a
          >
        </td>
      </tr>
      <%}) %>
    </tbody>
  </table>
</div>

<%- include('partials/footer.ejs')%>
