<%-include('partials/header.ejs')%>
<%-include('partials/navbar.ejs')%>
<% if(messages.danger){ %>
    <div class="alert alert-danger">
        <%= messages.danger %>
    </div>
<%}%>
    <div class="container col-04">
        <div class="card mt-4">
            <div class="card-header">
                <h2>Login de administrador</h2>

            </div>
            <div class="card-body m-auto">
                <p>Você precisa estar logado para acessar os recursos do painel.</p>
                <form action="/authenticate" method="post">
                    <label for="email">E-mail: </label>
                    <input class="form-control" type="text" name="email" id="email" placeholder="email@exemplo.com">
                    <br>
                    <label for="senha">Senha: </label>
                    <input class="form-control" type="password" name="senha" id="senha" placeholder="Insira sua senha">
                    <br>
                    <input type="submit" value="Entrar" class="btn btn-success btn-block">

                </form>
                <hr>
                <h6>Não possui conta? <a href="/cadastro">Cadastre-se</a></h6>
            </div>
        </div>
    </div>

<%-include('partials/footer.ejs')%>