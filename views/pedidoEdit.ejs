<%- include('partials/head.ejs') %> <%- include('partials/navbar.ejs') %>

<div class="container">
  <div class="card">
    <div class="card-header">
      <h1>Editar pedido</h1>
      <hr />
    </div>
    <div class="card-body">
      <form action="/pedidos/update" method="post">
        <label for="">Numero do pedido:</label>
        <input
          type="text"
          name="numero"
          id="numero"
          class="form-control"
          value="<%= pedido.numero%>"
          required
        />
        <label for="">Valor:</label>
        <input
          type="text"
          name="valor"
          id="valor"
          class="form-control"
          value="<%= pedido.valor%>"
          required
        />
        
        <input type="hidden" name="id" id="id" value="<%= pedido.id %>" />
        <br />
        <input
          type="submit"
          name=""
          class="btn btn-warning"
          value="Alterar"
          id=""
          onclick="return confirm('Confirma as alterações feitas no pedido <%= pedido.numero %> ?')"
        />
      </form>
      <hr />
    </div>
  </div>
</div>
<%- include('partials/footer.ejs') %>
