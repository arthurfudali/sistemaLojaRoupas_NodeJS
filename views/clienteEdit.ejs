<%- include('partials/head.ejs') %> <%- include('partials/navbar.ejs') %>

<div class="container">
  <div class="card">
    <div class="card-header">
      <h1>Editar cliente</h1>
      <hr />
    </div>
    <div class="card-body">
      <form action="/clientes/update" method="post">
        <label for="">Nome do cliente:</label>
        <input
          type="text"
          name="nome"
          id="nome"
          class="form-control"
          value="<%= cliente.nome%>"
          required
        />
        <label for="">CPF do cliente:</label>
        <input
          type="text"
          name="cpf"
          id="cpf"
          class="form-control"
          value="<%= cliente.cpf%>"
          required
        />
        <label for="">Endereco do cliente:</label>
        <input
          type="text"
          name="endereco"
          id="endereco"
          class="form-control"
          value="<%= cliente.endereco%>"
          required
        />
        <input type="hidden" name="id" id="id" value="<%= cliente.id %>" />
        <br />
        <input
          type="submit"
          name=""
          class="btn btn-warning"
          value="Alterar"
          id=""
          onclick="return confirm('Confirma as alterações feitas no cliente <%= cliente.nome %> ?')"
        />
      </form>
      <hr />
    </div>
  </div>
</div>
<%- include('partials/footer.ejs') %>
