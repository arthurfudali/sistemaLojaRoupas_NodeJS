<%-include('partials/header.ejs')%>
<%-include('partials/navbar.ejs')%>
<% if(messages.danger){ %>
    <div class="alert alert-danger">
        <%= messages.danger %>
    </div>
<%}%>
    <div class="container ">
        <div class="card mt-4">
            <div class="card-header">
                <h2>Cadastro de usuario</h2>

            </div>
            <div class="card-body m-4">
                <p>Cadastrar-se</p>
                <form action="/createUser" method="post">
                    <label for="email">E-mail: </label>
                    <input class="form-control" type="text" name="email" id="email" placeholder="email@exemplo.com">
                    <br>
                    <label for="senha">Senha: </label>
                    <input class="form-control" type="password" name="senha" id="senha" placeholder="Insira sua senha">
                    <br>
                    <input type="submit" value="Cadastrar" class="btn btn-success btn-block">

                </form>
                <hr>
                <h6>Já possui conta? <a href="/login">Faça o login</a></h6>
            </div>
        </div>
    </div>

<%-include('partials/footer.ejs')%>